<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Web Space</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Professional_Webpage.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project-view-styling.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul class="d-flex align-items-center justify-content-center list-unstyled mb-0">
                <li>
                    <a asp-page="/Index" class="nav-link">Home</a>
                </li>
                <li>
                    <a asp-page="/About" class="nav-link">About Me</a>
                </li>
                <li class="mx-3">
                    <div class="profile-icon">
                        <img src="~/images/casual-profile-picture.jpg" alt="Profile Icon" class="rounded-circle">
                    </div>
                </li>
                <li>
                    <a asp-page="/Project" class="nav-link">My Work</a>
                </li>
                <li>
                    <a asp-page="/Education" class="nav-link">Education</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section>
                @RenderBody()
            </section>
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2024 - My Web Space - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
